!!!
%html{lang: "en"}
  %head
    %meta{charset: "utf-8"}
    %meta{content: "width=device-width, initial-scale=1.0", name: "viewport"}
    %meta{content: "", name: "description"}
    %meta{content: "Sergey Pozhilov (GetTemplate.com)", name: "author"}
    %title Progressus - Free business bootstrap template by GetTemplate

    %link{href: "http://fonts.googleapis.com/css?family=Open+Sans:300,400,700", media: "screen", rel: "stylesheet"}
    %link{src: '//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css'}
    = stylesheet_link_tag 'bootstrap.min'
    = stylesheet_link_tag 'bootstrap-theme'
    = stylesheet_link_tag 'main'
    = stylesheet_link_tag 'iframe'

    / HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries
    /[if lt IE 9]
      = javascript_include_tag 'html5shiv'
      = javascript_include_tag 'respond.min'
  %body.home
    = yield
    
    / JavaScript libs are placed at the end of the document so the pages load faster
    %script{src: "http://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"}
    %script{src: "http://netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"}
    = javascript_include_tag 'headroom.min'
    = javascript_include_tag 'jQuery.headroom.min'
    = javascript_include_tag 'template'
    = javascript_include_tag 'iframe'