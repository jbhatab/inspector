.nested-fields.col-sm-12
  .panel.panel-default
    .panel-body
      = link_to_remove_association f, class: 'btn btn-danger setting-group-remove-box remove-box', :confirm => 'Remove setting group?' do
        %i.fa.fa-times

      = f.input :name, label: (f.object.name.blank? ? 'New Setting Group' : ('<b>'+f.object.name.split.map(&:capitalize).join(' ') + '</b> Setting Group').html_safe), placeholder: 'Title...', required: false


      %label.spacer Options
      

      .row#settings
        = f.simple_fields_for :settings do |setting|
          = render 'setting_fields', f: setting


        .col-sm-12
          = link_to_add_association f, :settings, class: 'btn btn-default', :'data-association-insertion-method' => 'before' do
            %i.fa.fa-plus-circle
            Add Setting

