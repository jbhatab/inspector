.theme-block
  .theme-thumbnail
    = link_to (image_tag 'http://placehold.it/300x300'), inspector_theme_path(theme)

  = link_to theme, class: 'btn btn-block expand btn-default', target: '_blank' do
    %i.fa.fa-desktop
    View

  = link_to inspector_theme_path(theme), class: 'btn btn-block expand btn-default btn-primary' do
    %i.fa.fa-search-plus
    Inspector

  = link_to customize_theme_path(theme), class: 'btn btn-block expand btn-info' do
    %i.fa.fa-edit
    Customize

  = link_to settings_theme_path(theme), class: 'btn btn-block expand btn-warning' do
    %i.fa.fa-gears
    Settings
  